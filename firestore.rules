rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // User profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    // Students
    match /students/{studentId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == studentId || hasRole('admin');
    }

    // Recruiters
    match /recruiters/{recruiterId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == recruiterId || hasRole('admin');
    }

    // Jobs
    match /jobs/{jobId} {
      allow read: if true; // Public listings
      allow write: if hasRole('recruiter') || hasRole('admin');
    }

    // Applications
    match /applications/{applicationId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.studentId || 
        hasRole('recruiter') || 
        hasRole('admin')
      );
      allow create: if hasRole('student');
      allow update: if hasRole('recruiter') || hasRole('admin');
    }
  }
}
